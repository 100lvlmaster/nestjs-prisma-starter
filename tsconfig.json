{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@auth/*": [
        "auth/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@decorators/*": [
        "decorators/*"
      ],
      "@env/*": [
        "environments/*"
      ],
      "@guards/*": [
        "guards/*"
      ],
      "@prisma/*": [
        "prisma/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@resolvers/*": [
        "resolvers/*"
      ],
    },
    "lib": [
      "dom",
      "es2018",
      "esnext"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}